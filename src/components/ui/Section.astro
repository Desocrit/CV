---
interface Props {
  title: string;
  id?: string;
  class?: string;
}

const { title, id, class: className = '' } = Astro.props;
const headingId = id ? `${id}-heading` : undefined;

const formatTitle = (str: string) =>
  str.toUpperCase().replace(/\s+/g, '_');
---

<section
  class:list={['section-with-label', className]}
  id={id}
  aria-labelledby={headingId}
>
  <div class="section-grid">
    <nav class="section-label" aria-hidden="true">
      <span class="section-title font-mono text-fluid-2xs">
        <span class="section-prefix" aria-hidden="true">// </span>
        <span class="section-title-text">{formatTitle(title)}</span>
      </span>
      <span class="section-title-print">{title}</span>
    </nav>

    <div class="section-content">
      <h2 id={headingId} class="sr-only">{title}</h2>
      <slot />
    </div>
  </div>
</section>

<style>
  .section-with-label {
    --section-rule-spacing: var(--spacing-fluid-sm);
    margin-top: var(--section-rule-spacing);
    margin-bottom: var(--spacing-fluid-sm);
  }

  .section-with-label:first-child {
    margin-top: 0;
  }

  .section-with-label:first-child .section-label {
    padding-top: 0;
  }

  .section-grid {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: var(--spacing-fluid-sm);
  }

  .section-label {
    grid-column: span 2;
    align-self: start;
    position: sticky;
    top: var(--spacing-fluid-sm);
    z-index: 10;
    background-color: var(--color-background);
    padding-top: var(--spacing-fluid-sm);
  }

  .section-content {
    grid-column: span 10;
    min-width: 0;
    align-self: start;
    padding-top: var(--spacing-fluid-sm);
  }

  .section-with-label:first-child .section-content {
    padding-top: 0;
  }

  .section-title {
    color: var(--color-accent-green);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    line-height: 1.4;
    white-space: nowrap;
  }

  .section-title-print {
    display: none;
  }

  [data-theme='light'] .section-title {
    color: var(--color-foreground);
  }

  @media (max-width: 768px) {
    .section-grid {
      display: flex;
      flex-direction: column;
      gap: 0;
    }

    .section-label {
      position: static;
      margin-top: 0;
      margin-bottom: var(--spacing-fluid-sm);
      padding: 0;
      background-color: transparent;
      z-index: auto;
    }

    .section-content {
      width: 100%;
      padding-top: var(--spacing-fluid-sm);
    }

    .section-with-label:first-child .section-content {
      padding-top: 0;
    }

    .section-title {
      display: block;
    }
  }

  @media print {
    .section-with-label {
      margin-top: 1.2rem;
      margin-bottom: 0.5rem;
    }

    .section-with-label:first-child {
      margin-top: 0;
    }

    .section-grid {
      display: block;
    }

    .section-label {
      display: block;
      margin-bottom: 0.25rem;
      padding-top: 0;
      background: transparent;
    }

    .section-content {
      display: block;
      border-top: none;
      padding-top: 0;
    }

    .section-title {
      display: none;
    }

    .section-title-print {
      display: block;
      color: #1a1a1a;
      font-family: var(--font-sans);
      font-size: 9pt;
      font-weight: 600;
      text-transform: none;
      letter-spacing: 0;
      border-bottom: 1px solid #e0e0e0;
      padding-bottom: 0.2rem;
    }
  }
</style>
