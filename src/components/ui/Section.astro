---
import ActionButton from './ActionButton.astro';

interface Props {
  title: string;
  id?: string;
  class?: string;
}

const { title, id, class: className = '' } = Astro.props;
const headingId = id ? `${id}-heading` : undefined;
const contentId = id ? `${id}-content` : `section-content-${Math.random().toString(36).slice(2, 9)}`;

const formatTitle = (str: string) =>
  str.toUpperCase().replace(/\s+/g, '_');
---

<section
  class:list={['section-with-label', className]}
  id={id}
  aria-labelledby={headingId}
  data-section-id={id}
>
  <div class="section-grid">
    <div class="section-label">
      <div class="section-label-inner">
        <div class="section-toggle-area">
          <button
            type="button"
            class="section-toggle"
            aria-expanded="true"
            aria-controls={contentId}
            aria-label={`Toggle ${title} section`}
          >
            <span class="section-title font-mono text-fluid-2xs" aria-hidden="true">
              <span class="section-prefix">// </span>
              <span class="section-title-text">{formatTitle(title)}</span><span class="section-context"></span>
            </span>
          </button>
        </div>
        <ActionButton label="^" class="scroll-top-btn" screenReaderLabel="^ Scroll to top" />
        <span class="section-title-print" aria-hidden="true">{title}</span>
      </div>
    </div>

    <div class="section-content" id={contentId}>
      <h2 id={headingId} class="sr-only">{title}</h2>
      <slot />
    </div>
  </div>
</section>

<style>
  /* ===== MOBILE FIRST: Terminal Command Bar (< 1024px) ===== */
  .section-with-label {
    --section-rule-spacing: var(--spacing-fluid-sm);
    --section-accent: var(--color-accent-green);
    margin-top: var(--section-rule-spacing);
    margin-bottom: var(--spacing-fluid-sm);
  }

  .section-with-label:first-child {
    margin-top: 0;
  }

  .section-grid {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .section-label {
    position: sticky;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    z-index: 20;
    margin-top: 0;
    margin-bottom: 0;
    padding: 0;
    background-color: var(--color-background);
  }

  .section-label-inner {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    /* Full-bleed: escape container padding */
    width: 100vw;
    position: relative;
    left: 50%;
    transform: translateX(-50%);
    padding: 0.625rem var(--spacing-fluid-md);
    border-top: 1px solid var(--section-accent);
    border-bottom: 1px solid var(--section-accent);
  }

  /* First section doesn't need top border */
  .section-with-label:first-child .section-label-inner {
    border-top: none;
  }

  .section-content {
    min-width: 0;
    width: 100%;
    padding-top: var(--spacing-fluid-md);
  }

  .section-title {
    display: block;
    flex-shrink: 0;
    color: var(--section-accent);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    line-height: 1.4;
    white-space: nowrap;
  }

  /* Print title - hidden by default, shown in light mode via global.css */
  .section-title-print {
    display: none;
  }

  /* Light mode: show clean title, hide terminal title */
  :global([data-theme='light']) .section-title {
    display: none !important;
  }

  :global([data-theme='light']) .section-title-print {
    display: block !important;
  }

  /* Light mode mobile: disable full-bleed positioning */
  :global([data-theme='light']) .section-label-inner {
    width: auto;
    left: auto;
    transform: none;
    padding: var(--spacing-fluid-xs) var(--spacing-fluid-xs) var(--spacing-fluid-xs) 0;
  }

  /* Context text (e.g., company name) that appears when scrolling */
  .section-context {
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .section-context:not(:empty) {
    opacity: 1;
  }

  .section-context::before {
    content: '/';
  }

  .section-context:empty::before {
    content: none;
  }

  /* Wrapper takes the flex space */
  .section-toggle-area {
    flex: 1;
  }

  /* Toggle button - sized to content with touch target */
  .section-toggle {
    all: unset;
    display: inline-flex;
    align-items: center;
    cursor: pointer;
    -webkit-tap-highlight-color: transparent;
    position: relative;
  }

  /* Expanded touch target on the button itself */
  .section-toggle::before {
    content: '';
    position: absolute;
    inset: -0.75rem;
    min-width: 44px;
    min-height: 44px;
  }

  .section-toggle:focus-visible {
    outline: 2px solid var(--section-accent);
    outline-offset: 2px;
  }

  /* Button inherits section accent color */
  .scroll-top-btn {
    display: inline-flex;
    flex-shrink: 0;
    position: relative;
    z-index: 2;
  }

  /* Expanded touch target without affecting layout */
  .scroll-top-btn::before {
    content: '';
    position: absolute;
    inset: -0.5rem;
    z-index: 1;
  }

  .scroll-top-btn :global(.bracket),
  .scroll-top-btn :global(.label) {
    color: var(--section-accent) !important;
  }

  /* Collapsed state */
  .section-with-label.is-collapsed .section-content {
    display: none;
  }

  /* ===== MD BREAKPOINT (1024px - 1199px): Header above content ===== */
  @media (min-width: 1024px) {
    .section-with-label {
      --section-accent: var(--color-accent-green);
    }

    .section-with-label:first-child .section-label {
      padding-top: 0;
    }

    .section-grid {
      display: flex;
      flex-direction: column;
      gap: var(--spacing-fluid-sm);
    }

    .section-label {
      position: relative;
      top: auto;
      width: auto;
      z-index: 10;
      padding: 0;
      background-color: transparent;
    }

    .section-label-inner {
      display: flex;
      align-items: flex-start;
      justify-content: flex-start;
      width: auto;
      position: relative;
      left: auto;
      transform: none;
      padding: 0;
      border: none;
    }

    :global([data-theme='light']) .section-label-inner {
      padding: 0;
    }

    .section-with-label:first-child .section-label-inner {
      border-top: none;
    }

    .section-title {
      color: var(--color-accent-green);
      margin-bottom: var(--spacing-fluid-2xs);
    }

    :global([data-theme='light']) .section-title {
      color: var(--color-foreground);
    }

    .section-content {
      width: 100%;
      padding-top: 0;
    }

    /* Hide mobile-specific elements */
    .scroll-top-btn {
      display: none !important;
    }

    .section-toggle {
      all: unset;
      display: contents;
    }

    .section-context {
      display: none;
    }
  }

  /* ===== LG BREAKPOINT (1200px+): Header in gutter ===== */
  @media (min-width: 1200px) {
    .section-grid {
      display: grid;
      grid-template-columns: repeat(12, 1fr);
      gap: var(--spacing-fluid-sm);
    }

    .section-label {
      grid-column: span 2;
      align-self: start;
      position: sticky;
      top: var(--spacing-fluid-sm);
      z-index: 10;
      background-color: var(--color-background);
      padding-top: var(--spacing-fluid-sm);
    }

    .section-with-label:first-child .section-label {
      padding-top: 0;
    }

    .section-content {
      grid-column: span 10;
      min-width: 0;
      align-self: start;
      padding-top: var(--spacing-fluid-sm);
    }

    .section-with-label:first-child .section-content {
      padding-top: 0;
    }

    /* Typeface alignment fix for sections with larger content titles */
    .section-with-label[data-section-id='projects'] .section-title,
    .section-with-label[data-section-id='history'] .section-title,
    .section-with-label[data-section-id='education'] .section-title {
      margin-top: 3px;
    }
  }

  @media print {
    .section-with-label {
      margin-top: 0.75rem;
      margin-bottom: 0.5rem;
    }

    .section-with-label:first-child {
      margin-top: 0;
    }

    .section-grid {
      display: block;
    }

    .section-label {
      display: block;
      margin-bottom: 0.35rem;
      padding-top: 0;
      background: transparent;
    }

    .section-label-inner {
      border: none;
      padding: 0;
    }

    .scroll-top-btn {
      display: none;
    }

    .section-content {
      display: block;
      border-top: none;
      padding-top: 0;
    }

    .section-title {
      display: none;
    }

    /* Match light mode styling - use variables */
    .section-title-print {
      display: inline-block;
      color: var(--color-foreground);
      font-family: var(--font-sans);
      font-size: 12px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      border-bottom: none;
      padding-bottom: 0;
      margin-bottom: 0.25rem;
    }
  }
</style>

<script>
  function initSectionBehavior() {
    // Scroll to top functionality
    document.querySelectorAll('.scroll-top-btn').forEach((btn) => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation(); // Prevent toggle when clicking scroll button
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });
    });

    // Mobile-only features
    const isMobile = window.matchMedia('(max-width: 1023px)').matches;
    if (!isMobile) return;

    // Accordion toggle functionality (mobile only)
    document.querySelectorAll('.section-toggle').forEach((toggle) => {
      toggle.addEventListener('click', () => {
        const section = (toggle as HTMLElement).closest('.section-with-label');
        if (!section) return;

        const isCollapsed = section.classList.toggle('is-collapsed');
        toggle.setAttribute('aria-expanded', String(!isCollapsed));
      });
    });

    const sections = document.querySelectorAll('.section-with-label');
    if (sections.length === 0) return;

    // Find which section's header is stuck and match color to topmost card
    function updateActiveSection() {
      sections.forEach((section) => {
        const rect = section.getBoundingClientRect();
        const label = section.querySelector('.section-label') as HTMLElement | null;
        const sectionEl = section as HTMLElement;

        // We're "inside" this section if its top is at/above viewport and bottom is below
        const isActive = rect.top <= 10 && rect.bottom > 50;

        if (isActive) {
          label?.classList.add('is-active');

          // Find the topmost card in this section (supports both ContentCard and ImpactGrid)
          // For 2-column grids, we want the first card (leftmost) in the current row
          const cards = section.querySelectorAll('.content-card, .impact-card-wrapper');
          let activeCard: Element | null = null;
          let highestTop = -Infinity;

          cards.forEach((card) => {
            const cardRect = card.getBoundingClientRect();
            // Card is in the header zone if top <= threshold AND still visible
            if (cardRect.top <= 80 && cardRect.bottom > 0) {
              // Pick the card with highest top (most recently scrolled into view)
              // For cards in same row (equal tops), first in DOM wins
              if (cardRect.top > highestTop) {
                highestTop = cardRect.top;
                activeCard = card;
              }
            }
          });

          // Mark active card and remove from others
          cards.forEach((card) => card.classList.remove('is-active-card'));

          // Get the card's accent color and apply to section header
          if (activeCard) {
            const card = activeCard as Element;
            card.classList.add('is-active-card');
            const cardAccent = getComputedStyle(card).getPropertyValue('--card-accent').trim();
            if (cardAccent) {
              sectionEl.style.setProperty('--section-accent', cardAccent);
            }

            // Extract context text and show in header
            // Supports both ContentCard and ImpactGrid structures
            const contextSpan = section.querySelector('.section-context') as HTMLElement | null;
            if (contextSpan) {
              let contextText = '';

              // ImpactGrid: card-header contains category like "[ STRATEGIC_PIVOTS ]"
              const impactHeader = card.querySelector('.card-header');
              // ContentCard: label (company name) or h3 title (project name)
              const labelEl = card.querySelector('.label-text .screen-only');
              const titleEl = card.querySelector('.card-meta h3');

              if (impactHeader) {
                // Extract text from "[ CATEGORY ]" format - strip brackets and spaces
                contextText = impactHeader.textContent?.trim().replace(/^\[\s*|\s*\]$/g, '') || '';
              } else if (labelEl) {
                contextText = labelEl.textContent?.trim() || '';
              } else if (titleEl) {
                contextText = titleEl.textContent?.trim().toUpperCase().replace(/\s+/g, '_') || '';
              }

              contextSpan.textContent = contextText;
            }
          }
        } else {
          label?.classList.remove('is-active');
          // Reset to default green and clear context
          sectionEl.style.setProperty('--section-accent', 'var(--color-accent-green)');
          const contextSpan = section.querySelector('.section-context') as HTMLElement | null;
          if (contextSpan) contextSpan.textContent = '';
          // Clear active card states
          const cards = section.querySelectorAll('.content-card, .impact-card-wrapper');
          cards.forEach((card) => card.classList.remove('is-active-card'));
        }
      });
    }

    // Throttled scroll handler
    let ticking = false;
    function onScroll() {
      if (!ticking) {
        requestAnimationFrame(() => {
          updateActiveSection();
          ticking = false;
        });
        ticking = true;
      }
    }

    window.addEventListener('scroll', onScroll, { passive: true });
    updateActiveSection(); // Initial check
  }

  // Initialize on DOMContentLoaded
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initSectionBehavior);
  } else {
    initSectionBehavior();
  }

  // Re-initialize after Astro page transitions
  document.addEventListener('astro:page-load', initSectionBehavior);
</script>
