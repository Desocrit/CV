---
import ActionButton from './ActionButton.astro';

interface Props {
  title: string;
  id?: string;
  class?: string;
}

const { title, id, class: className = '' } = Astro.props;
const headingId = id ? `${id}-heading` : undefined;
const contentId = id ? `${id}-content` : `section-content-${Math.random().toString(36).slice(2, 9)}`;

const formatTitle = (str: string) => str.toUpperCase().replace(/\s+/g, '_');
---

<section
  class:list={['section-with-label group', className]}
  id={id}
  aria-labelledby={headingId}
  data-section-id={id}
  style="--section-accent: var(--color-accent-green);"
>
  <div class="section-grid">
    <!-- Section header: sticky on mobile, in gutter on xl -->
    <div class="section-header">
      <button
        type="button"
        class="section-toggle"
        aria-expanded="true"
        aria-controls={contentId}
        aria-label={`Toggle ${title} section`}
      >
        <span class="section-title" aria-hidden="true">
          <span class="section-prefix">// </span>
          <span class="section-title-text">{formatTitle(title)}</span>
          <span class="section-context"></span>
        </span>
        <span class="section-title-clean" aria-hidden="true">{title}</span>
      </button>

      <ActionButton
        label="^"
        class="scroll-top-btn"
        screenReaderLabel="Scroll to top"
      />
    </div>

    <!-- Section content -->
    <div class="section-content" id={contentId}>
      <h2 id={headingId} class="sr-only">{title}</h2>
      <slot />
    </div>
  </div>
</section>

<style>
  /* ==========================================================================
     BASE STRUCTURE
     ========================================================================== */
  .section-with-label {
    --section-label-width: 140px;
    margin-top: var(--spacing-fluid-sm);
    margin-bottom: var(--spacing-fluid-sm);
  }

  .section-with-label:first-child {
    margin-top: 0;
  }

  .section-grid {
    display: flex;
    flex-direction: column;
  }

  /* ==========================================================================
     SECTION HEADER - Mobile (xs/sm): Sticky bar with borders
     ========================================================================== */
  .section-header {
    position: sticky;
    top: 0;
    z-index: 20;
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100vw;
    margin-left: calc(-1 * var(--spacing-fluid-md));
    padding: 0.625rem var(--spacing-fluid-md);
    background: var(--color-background);
    border-top: 1px solid var(--section-accent);
    border-bottom: 1px solid var(--section-accent);
  }

  .section-with-label:first-child .section-header {
    border-top: none;
  }

  /* ==========================================================================
     SECTION TOGGLE BUTTON
     ========================================================================== */
  .section-toggle {
    display: inline-flex;
    align-items: center;
    border: none;
    padding: 0;
    margin: 0;
    background: transparent;
    cursor: pointer;
    position: relative;
  }

  .section-toggle:focus-visible {
    outline: 2px solid var(--section-accent);
    outline-offset: 2px;
  }

  /* Touch target */
  @media screen {
    .section-toggle::before {
      content: '';
      position: absolute;
      inset: -0.75rem;
      min-width: 44px;
      min-height: 44px;
    }
  }

  /* ==========================================================================
     TITLE VARIANTS
     ========================================================================== */

  /* Terminal-style title: dark mode default */
  .section-title {
    display: block;
    font-family: var(--font-mono);
    font-size: var(--text-fluid-2xs);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    line-height: 1.6;
    white-space: nowrap;
    color: var(--section-accent);
  }

  .section-prefix {
    display: inline;
  }

  .section-context {
    opacity: 0;
    transition: opacity 0.2s;
  }

  .section-context:not(:empty) {
    opacity: 1;
  }

  .section-context:not(:empty)::before {
    content: '/';
  }

  /* Clean title: hidden by default (shown in light mode/print) */
  .section-title-clean {
    display: none;
    font-family: 'IBM Plex Sans', system-ui, sans-serif;
    font-size: var(--text-fluid-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-foreground);
  }

  /* ==========================================================================
     SCROLL-TO-TOP BUTTON
     ========================================================================== */
  .scroll-top-btn {
    flex-shrink: 0;
    position: relative;
    z-index: 2;
  }

  /* Color override to match section accent */
  .scroll-top-btn :global(.bracket),
  .scroll-top-btn :global(.label) {
    color: var(--section-accent) !important;
  }

  /* Touch target */
  @media screen {
    .scroll-top-btn::before {
      content: '';
      position: absolute;
      inset: -0.5rem;
      z-index: 1;
    }
  }

  /* ==========================================================================
     SECTION CONTENT
     ========================================================================== */
  .section-content {
    width: 100%;
    min-width: 0;
    padding-top: var(--spacing-fluid-md);
  }

  /* Collapsed state (JS toggle) */
  .section-with-label.is-collapsed .section-content {
    display: none;
  }

  /* ==========================================================================
     LIGHT MODE: Clean Swiss typography
     ========================================================================== */
  :global([data-theme='light']) .section-header {
    border-color: var(--color-border);
    padding-left: 0;
    padding-right: var(--spacing-fluid-xs);
    width: auto;
    margin-left: 0;
  }

  :global([data-theme='light']) .section-title {
    display: none;
  }

  :global([data-theme='light']) .section-title-clean {
    display: block;
  }

  /* ==========================================================================
     LG BREAKPOINT (960px+): Left-aligned, no sticky, no back-to-top
     ========================================================================== */
  @media (min-width: 960px) {
    .section-grid {
      flex-direction: column;
      gap: var(--spacing-fluid-sm);
    }

    .section-header {
      position: relative;
      top: auto;
      z-index: 10;
      width: auto;
      margin-left: 0;
      padding: 0;
      background: transparent;
      border: none;
      justify-content: flex-start;
    }

    .section-toggle {
      display: contents;
    }

    .section-title {
      color: var(--color-accent-green);
      margin-bottom: var(--spacing-fluid-2xs);
    }

    .section-context {
      display: none;
    }

    .scroll-top-btn {
      display: none;
    }

    .section-content {
      padding-top: 0;
    }

    /* Light mode lg: full-width underline */
    :global([data-theme='light']) .section-title-clean {
      display: block;
      padding-bottom: 0.5rem;
      margin-bottom: 0.25rem;
      border-bottom: 0.5px solid var(--color-border);
    }
  }

  /* ==========================================================================
     XL BREAKPOINT (1300px+): Gutter layout with sticky label
     ========================================================================== */
  @media (min-width: 1300px) {
    .section-grid {
      display: grid;
      grid-template-columns: var(--section-label-width) 1fr;
      gap: var(--spacing-fluid-sm);
    }

    .section-header {
      position: sticky;
      top: var(--spacing-fluid-sm);
      align-self: start;
      background: var(--color-background);
      padding-top: var(--spacing-fluid-sm);
    }

    .section-with-label:first-child .section-header {
      padding-top: 0;
    }

    .section-content {
      padding-top: var(--spacing-fluid-sm);
    }

    .section-with-label:first-child .section-content {
      padding-top: 0;
    }

    /* Typeface alignment fix for content titles */
    .section-with-label[data-section-id='projects'] .section-title,
    .section-with-label[data-section-id='history'] .section-title,
    .section-with-label[data-section-id='education'] .section-title {
      margin-top: 3px;
    }

    /* Light mode xl: inline underline */
    :global([data-theme='light']) .section-title-clean {
      display: inline-block;
    }
  }

  /* ==========================================================================
     PRINT STYLES
     ========================================================================== */
  @media print {
    .section-with-label {
      margin-top: 0.75rem;
      margin-bottom: 0.5rem;
    }

    .section-with-label:first-child {
      margin-top: 0;
    }

    .section-grid {
      display: block;
    }

    .section-header {
      position: static;
      width: auto;
      margin: 0 0 0.5rem 0;
      padding: 0;
      background: transparent;
      border: none;
    }

    .section-toggle {
      display: contents;
    }

    .section-title {
      display: none !important;
    }

    .section-title-clean {
      display: block !important;
      font-size: 11pt;
      color: #1a1a1a;
      border: none;
      padding: 0;
      margin: 0;
    }

    .scroll-top-btn {
      display: none !important;
    }

    .section-content {
      padding-top: 0;
    }
  }
</style>

<script>
  function initSectionBehavior() {
    // Scroll to top functionality
    document.querySelectorAll('.scroll-top-btn').forEach((btn) => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation(); // Prevent toggle when clicking scroll button
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });
    });

    // Mobile-only features
    const isMobile = window.matchMedia('(max-width: 1299px)').matches;
    if (!isMobile) return;

    // Accordion toggle functionality (mobile only)
    document.querySelectorAll('.section-toggle').forEach((toggle) => {
      toggle.addEventListener('click', () => {
        const section = (toggle as HTMLElement).closest('.section-with-label');
        if (!section) return;

        const isCollapsed = section.classList.toggle('is-collapsed');
        toggle.setAttribute('aria-expanded', String(!isCollapsed));
      });
    });

    const sections = document.querySelectorAll('.section-with-label');
    if (sections.length === 0) return;

    // Find which section's header is stuck and match color to topmost card
    function updateActiveSection() {
      sections.forEach((section) => {
        const rect = section.getBoundingClientRect();
        const header = section.querySelector('.section-header') as HTMLElement | null;
        const sectionEl = section as HTMLElement;

        // We're "inside" this section if its top is at/above viewport and bottom is below
        const isActive = rect.top <= 10 && rect.bottom > 50;

        if (isActive) {
          header?.classList.add('is-active');

          // Find the topmost card in this section (supports both ContentCard and ImpactGrid)
          // For 2-column grids, we want the first card (leftmost) in the current row
          const cards = section.querySelectorAll('.content-card, .impact-card-wrapper');
          let activeCard: Element | null = null;
          let highestTop = -Infinity;

          cards.forEach((card) => {
            const cardRect = card.getBoundingClientRect();
            // Card is in the header zone if top <= threshold AND still visible
            if (cardRect.top <= 80 && cardRect.bottom > 0) {
              // Pick the card with highest top (most recently scrolled into view)
              // For cards in same row (equal tops), first in DOM wins
              if (cardRect.top > highestTop) {
                highestTop = cardRect.top;
                activeCard = card;
              }
            }
          });

          // Mark active card and remove from others
          cards.forEach((card) => card.classList.remove('is-active-card'));

          // Get the card's accent color and apply to section header
          if (activeCard) {
            const card = activeCard as Element;
            card.classList.add('is-active-card');
            const cardAccent = getComputedStyle(card).getPropertyValue('--card-accent').trim();
            if (cardAccent) {
              sectionEl.style.setProperty('--section-accent', cardAccent);
            }

            // Extract context text and show in header
            // Supports both ContentCard and ImpactGrid structures
            const contextSpan = section.querySelector('.section-context') as HTMLElement | null;
            if (contextSpan) {
              let contextText = '';

              // ImpactGrid: card-header contains category like "[ STRATEGIC_PIVOTS ]"
              const impactHeader = card.querySelector('.card-header');
              // ContentCard: label (company name) or h3 title (project name)
              const labelEl = card.querySelector('.label-text .screen-only');
              const titleEl = card.querySelector('.card-meta h3');

              if (impactHeader) {
                // Extract text from "[ CATEGORY ]" format - strip brackets and spaces
                contextText = impactHeader.textContent?.trim().replace(/^\[\s*|\s*\]$/g, '') || '';
              } else if (labelEl) {
                contextText = labelEl.textContent?.trim() || '';
              } else if (titleEl) {
                contextText = titleEl.textContent?.trim().toUpperCase().replace(/\s+/g, '_') || '';
              }

              contextSpan.textContent = contextText;
            }
          }
        } else {
          header?.classList.remove('is-active');
          // Reset to default green and clear context
          sectionEl.style.setProperty('--section-accent', 'var(--color-accent-green)');
          const contextSpan = section.querySelector('.section-context') as HTMLElement | null;
          if (contextSpan) contextSpan.textContent = '';
          // Clear active card states
          const cards = section.querySelectorAll('.content-card, .impact-card-wrapper');
          cards.forEach((card) => card.classList.remove('is-active-card'));
        }
      });
    }

    // Throttled scroll handler
    let ticking = false;
    function onScroll() {
      if (!ticking) {
        requestAnimationFrame(() => {
          updateActiveSection();
          ticking = false;
        });
        ticking = true;
      }
    }

    window.addEventListener('scroll', onScroll, { passive: true });
    updateActiveSection(); // Initial check
  }

  // Initialize on DOMContentLoaded
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initSectionBehavior);
  } else {
    initSectionBehavior();
  }

  // Re-initialize after Astro page transitions
  document.addEventListener('astro:page-load', initSectionBehavior);
</script>
