---
interface Props {
  triggerText?: string;
  defaultOpen?: boolean;
  class?: string;
}

const { triggerText = 'Read more', defaultOpen = false, class: className = '' } = Astro.props;
---

<details class:list={['collapsible group print:block', className]} open={defaultOpen}>
  <summary
    class="flex cursor-pointer items-center gap-2 font-mono text-fluid-sm text-muted-foreground hover:text-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 focus-visible:ring-offset-background transition-colors list-none [&::-webkit-details-marker]:hidden print:hidden"
  >
    <svg
      class="size-3 shrink-0 motion-safe:transition-transform group-open:rotate-90"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
      aria-hidden="true"
    >
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5l7 7-7 7" />
    </svg>
    <span class="tracking-wide">{triggerText}</span>
  </summary>
  <div class="collapsible-content mt-3 pl-5 print:!block print:pl-0 print:mt-0">
    <slot />
  </div>
</details>
