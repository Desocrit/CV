---
/**
 * PrintOnly - Wrapper that only shows content in print media
 *
 * Use this for print-optimized layouts, additional information
 * that's useful on paper but not needed on screen.
 *
 * @example
 * <PrintOnly>
 *   <CompactLayout data={data} />
 * </PrintOnly>
 */
export interface Props {
  /** HTML element to render (default: div) */
  as?: 'div' | 'span' | 'section' | 'aside' | 'article';
  /** Additional CSS classes */
  class?: string;
  /** Keep the wrapper element in print instead of using display:contents (default: false) */
  block?: boolean;
}

const { as: Tag = 'div', class: className = '', block = false } = Astro.props;
---

<Tag class:list={['print-only hidden', block ? 'print:!block' : 'print:!contents', className]}>
  <slot />
</Tag>
