<script>
  function initThemeToggle() {
    const toggle = document.getElementById('theme-toggle');
    const html = document.documentElement;

    if (!toggle) return;

    const sunIconEl = toggle.querySelector('.sun-icon');
    const moonIconEl = toggle.querySelector('.moon-icon');
    const labelEl = toggle.querySelector('.theme-label');
    const tagLightEl = toggle.querySelector('.theme-tag-light');
    const tagDarkEl = toggle.querySelector('.theme-tag-dark');

    if (!sunIconEl || !moonIconEl || !labelEl) return;

    // Store references after null check for TypeScript
    const sunIcon = sunIconEl;
    const moonIcon = moonIconEl;
    const label = labelEl;
    const tagLight = tagLightEl;
    const tagDark = tagDarkEl;

    // Check for saved preference or system preference
    const savedTheme = localStorage.getItem('theme');
    const systemDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
    const isDark = savedTheme ? savedTheme === 'dark' : systemDark;

    function applyTheme(dark: boolean) {
      if (dark) {
        html.removeAttribute('data-theme');
        sunIcon.classList.remove('hidden');
        moonIcon.classList.add('hidden');
        label.textContent = 'Light Mode';
        toggle?.setAttribute('aria-label', 'Light Mode: Switch to light theme');
        // Show LT tag (switch to light), hide DK tag
        tagLight?.classList.remove('hidden');
        tagDark?.classList.add('hidden');
      } else {
        html.setAttribute('data-theme', 'light');
        sunIcon.classList.add('hidden');
        moonIcon.classList.remove('hidden');
        label.textContent = 'Dark Mode';
        toggle?.setAttribute('aria-label', 'Dark Mode: Switch to dark theme');
        // Show DK tag (switch to dark), hide LT tag
        tagLight?.classList.add('hidden');
        tagDark?.classList.remove('hidden');
      }
    }

    // Set initial state
    applyTheme(isDark);

    // Handle toggle click
    toggle.addEventListener('click', () => {
      const isCurrentlyLight = html.getAttribute('data-theme') === 'light';
      const newTheme = isCurrentlyLight ? 'dark' : 'light';
      localStorage.setItem('theme', newTheme);
      applyTheme(newTheme === 'dark');
    });
  }

  // Initialize on DOMContentLoaded
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initThemeToggle);
  } else {
    initThemeToggle();
  }

  // Re-initialize after Astro page transitions
  document.addEventListener('astro:page-load', initThemeToggle);
</script>
