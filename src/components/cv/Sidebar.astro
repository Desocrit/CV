---
import SidebarLink from '../ui/SidebarLink.astro';

interface Achievement {
  metric: string;
  headline: string;
  description: string;
}

interface Education {
  degree: string;
  degree_title: string;
  score_short: string;
  specialism: string;
  institution: string;
  year: number;
}

interface SkillCategory {
  name: string;
  displayName: string;
  skills: string[];
}

interface Props {
  name: string;
  role: string;
  email: string;
  location: string;
  linkedin: string;
  github: string;
  website: string;
  achievements: Achievement[];
  education: Education;
  skillCategories: SkillCategory[];
}

const { name, role, email, location, linkedin, github, website: _website, achievements, education, skillCategories } = Astro.props;

// Transform metric names into SCREAMING_SNAKE_CASE for labels
const toSnakeCase = (str: string) =>
  str.toUpperCase().replace(/\s+/g, '_');
---

<aside class="sidebar-column scrollbar-hidden">
  <!-- Header Section -->
  <header class="mb-fluid-md">
    <!-- Name -->
    <h1 class="text-3xl font-medium text-foreground leading-none tracking-tight">{name}</h1>

    <!-- Role -->
    <p class="sidebar-role text-fluid-sm font-light tracking-wide mt-2">
      {role}
    </p>

    <!-- Location -->
    <p class="text-fluid-2xs font-mono text-muted-foreground mt-1">
      {location}
    </p>
  </header>

  <!-- Contact Links -->
  <nav class="mb-fluid-md" aria-label="Contact links">
    <address class="flex flex-col gap-2 font-mono text-fluid-2xs not-italic">
      <SidebarLink href={`mailto:${email}`} aria-label={`Send email to ${email}`}>
        <svg class="h-3 w-3 opacity-50 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        <span class="link-text">{email}</span>
      </SidebarLink>

      <SidebarLink href={linkedin} external aria-label="View LinkedIn profile (opens in new tab)">
        <svg class="h-3 w-3 opacity-50 shrink-0" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
        </svg>
        <span class="link-text">LinkedIn</span>
      </SidebarLink>

      <SidebarLink href={github} external data-print="hide" aria-label="View GitHub profile (opens in new tab)">
        <svg class="h-3 w-3 opacity-50 shrink-0" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
        </svg>
        <span class="link-text">GitHub</span>
      </SidebarLink>

      <SidebarLink onClick="window.print()" data-print="hide" aria-label="Export CV as PDF">
        <svg class="h-3 w-3 opacity-50 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
        </svg>
        <span class="link-text">Export PDF</span>
      </SidebarLink>

      <button
        id="theme-toggle"
        type="button"
        class="sidebar-link inline-flex items-center gap-2 text-muted-foreground hover:text-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring cursor-pointer"
        aria-label="Toggle theme"
        data-print="hide"
      >
        <!-- Sun icon shown in dark mode (click to go light) -->
        <svg class="h-3 w-3 opacity-50 shrink-0 sun-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
        <!-- Moon icon shown in light mode (click to go dark) -->
        <svg class="h-3 w-3 opacity-50 shrink-0 moon-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
        </svg>
        <!-- Labels indicate what clicking will switch TO -->
        <span class="link-text theme-label">Light Mode</span>
      </button>
    </address>
  </nav>

  <!-- Education - Spec Block Format -->
  <section class="mb-fluid-md" aria-label="Education">
    <h2 class="sidebar-section-title">Education</h2>
    <div class="spec-block mt-fluid-xs">
      <!-- Row 1: Degree Title -->
      <p class="font-sans text-fluid-xs text-muted-foreground">
        {education.degree_title} {education.degree}
      </p>
      <!-- Row 2: INSTITUTION // YEAR -->
      <p class="font-mono text-[10px] uppercase tracking-wider text-muted-foreground mt-1">
        {education.institution} <span class="spec-separator" aria-hidden="true">//</span> {education.year}
      </p>
      <!-- Row 3: SPECIALISM // SCORE -->
      <p class="font-mono text-[10px] uppercase tracking-wider text-muted-foreground mt-0.5">
        {education.specialism} <span class="spec-separator" aria-hidden="true">//</span> {education.score_short}
      </p>
    </div>
  </section>

  <!-- Outlier Achievements -->
  <section class="mb-fluid-md" aria-label="Key Achievements">
    <h2 class="sidebar-section-title">Achievements</h2>
    <div class="mt-fluid-xs space-y-fluid-sm">
      {achievements.map((achievement) => (
        <div>
          <div class="flex items-baseline gap-2">
            <data
              value={achievement.headline}
              class="achievement-headline font-mono text-fluid-base font-semibold tracking-tight leading-none"
            >
              {achievement.headline}
            </data>
            <span class="achievement-label font-mono text-[9px] uppercase tracking-[0.12em]">
              {toSnakeCase(achievement.metric)}
            </span>
          </div>
          <p class="text-fluid-2xs text-muted-foreground leading-snug mt-1">
            {achievement.description}
          </p>
        </div>
      ))}
    </div>
  </section>

  <!-- Skills (temporary) -->
  <section aria-label="Skills">
    <h2 class="sidebar-section-title">Skills</h2>
    <ul class="mt-fluid-xs space-y-1 text-fluid-2xs">
      {skillCategories.flatMap(c => c.skills).slice(0, 3).map((skill) => (
        <li class="flex items-center gap-1.5 text-muted-foreground">
          <span class="skill-separator" aria-hidden="true">-</span>
          <span>{skill}</span>
        </li>
      ))}
    </ul>
  </section>
</aside>

<style>
  .sidebar-column {
    height: 100%;
    overflow-y: auto;
    padding: var(--spacing-fluid-lg);
  }

  /* Mobile: Match main column padding */
  @media (max-width: 1024px) {
    .sidebar-column {
      height: auto;
      overflow-y: visible;
      padding: var(--spacing-fluid-md);
    }
  }

  /* Sidebar link with text underline animation */
  .sidebar-link {
    transition: color 0.2s ease;
  }

  .sidebar-link .link-text {
    position: relative;
  }

  .sidebar-link .link-text::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background-color: var(--color-foreground);
    transition: width 0.2s ease;
  }

  .sidebar-link:hover .link-text::after {
    width: 100%;
  }

  .sidebar-role {
    color: var(--color-muted-foreground-light);
  }

  .sidebar-section-title {
    font-family: var(--font-mono);
    font-size: var(--text-fluid-2xs);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-muted-foreground-light);
    border-bottom: 1px solid var(--color-border);
    padding-bottom: calc(var(--space-fluid-xs) + 0.125rem);
    width: fit-content;
  }

  /* Achievement headline - purple accent */
  .achievement-headline {
    color: var(--color-accent-purple);
  }

  /* Achievement label - purple accent */
  .achievement-label {
    color: var(--color-accent-purple);
  }

  /* Skill separator - purple accent */
  .skill-separator {
    color: var(--color-accent-purple);
  }

  /* Spec block separator - inherits color from parent */
  .spec-separator {
    opacity: 0.6;
    margin: 0 0.25em;
  }

  /* Print styles */
  @media print {
    .sidebar-column {
      height: auto;
      overflow: visible;
    }

    .sidebar-section-title {
      border-color: #ccc;
    }

    .achievement-headline,
    .achievement-label {
      color: #333 !important;
    }
  }
</style>

<script>
  function initThemeToggle() {
    const toggle = document.getElementById('theme-toggle');
    const html = document.documentElement;

    if (!toggle) return;

    const sunIconEl = toggle.querySelector('.sun-icon');
    const moonIconEl = toggle.querySelector('.moon-icon');
    const labelEl = toggle.querySelector('.theme-label');

    if (!sunIconEl || !moonIconEl || !labelEl) return;

    // Store references after null check for TypeScript
    const sunIcon = sunIconEl;
    const moonIcon = moonIconEl;
    const label = labelEl;

    // Check for saved preference or system preference
    const savedTheme = localStorage.getItem('theme');
    const systemDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
    const isDark = savedTheme ? savedTheme === 'dark' : systemDark;

    function applyTheme(dark: boolean) {
      if (dark) {
        html.removeAttribute('data-theme');
        sunIcon.classList.remove('hidden');
        moonIcon.classList.add('hidden');
        label.textContent = 'Light Mode';
      } else {
        html.setAttribute('data-theme', 'light');
        sunIcon.classList.add('hidden');
        moonIcon.classList.remove('hidden');
        label.textContent = 'Dark Mode';
      }
    }

    // Set initial state
    applyTheme(isDark);

    // Handle toggle click
    toggle.addEventListener('click', () => {
      const isCurrentlyLight = html.getAttribute('data-theme') === 'light';
      const newTheme = isCurrentlyLight ? 'dark' : 'light';
      localStorage.setItem('theme', newTheme);
      applyTheme(newTheme === 'dark');
    });
  }

  // Initialize on DOMContentLoaded
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initThemeToggle);
  } else {
    initThemeToggle();
  }

  // Re-initialize after Astro page transitions
  document.addEventListener('astro:page-load', initThemeToggle);
</script>
