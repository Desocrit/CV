<style>
  .sidebar-column {
    position: sticky;
    top: 0;
    align-self: start;
    max-height: 100vh;
    overflow-y: auto;
    padding: var(--spacing-fluid-lg);
    padding-bottom: 0;
  }

  @media (max-width: 1023px) {
    .sidebar-column {
      position: static;
      max-height: none;
      overflow-y: visible;
      padding: var(--spacing-fluid-md);
      padding-bottom: 0;
    }
  }

  /* Small screens only (640px-1023px): two-column layout with Achievements in second column */
  @media screen and (min-width: 640px) and (max-width: 1023px) {
    .sidebar-column {
      display: grid;
      grid-template-columns: 1fr 1fr;
      grid-template-rows: auto auto auto;
      column-gap: var(--spacing-fluid-md);
      row-gap: 0;
    }

    .site-header {
      grid-column: 1;
      grid-row: 1;
      margin-bottom: 0.25rem;
    }

    .profile-section {
      grid-column: 1;
      grid-row: 2;
      margin: 0;
    }

    .social-nav {
      grid-column: 1;
      grid-row: 3;
      margin-top: 0.75rem;
      margin-bottom: 0;
    }

    .achievements-section {
      grid-column: 2;
      grid-row: 1 / 4;
      align-self: start;
    }

    .achievements-grid {
      margin-top: 0 !important;
    }

    /* Hide all section titles on small screens */
    .sidebar-section-title,
    .terminal-section-title,
    .mobile-section-title {
      display: none !important;
    }
  }

  /* ===== SOCIAL LINKS SYSTEM ===== */
  .social-links {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .social-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-muted-foreground);
    transition: color 0.2s ease;
    cursor: pointer;
    background: none;
    border: none;
    padding: 0;
    font: inherit;
    text-align: left;
    position: relative;
  }

  /* Invisible expanded touch target via pseudo-element */
  .social-link::before {
    content: '';
    position: absolute;
    inset: -0.5rem;
    min-width: 44px;
    min-height: 44px;
  }

  .social-link:hover {
    color: var(--color-foreground);
  }

  .social-link:focus-visible {
    outline: none;
    ring: 2px;
    ring-color: var(--color-ring);
  }

  .social-icon {
    width: 0.75rem;
    height: 0.75rem;
    opacity: 0.5;
    flex-shrink: 0;
  }

  /* Desktop: show full link text, hide tags */
  .link-text {
    position: relative;
  }

  .link-text::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background-color: var(--color-foreground);
    transition: width 0.2s ease;
  }

  .social-link:hover .link-text::after {
    width: 100%;
  }

  .link-tag {
    display: none;
  }

  /* Mobile: horizontal layout with tags/icons */
  @media (max-width: 1023px) {
    .social-links {
      flex-direction: row;
      flex-wrap: wrap;
      gap: 0.75rem;
    }

    /* Hide text on mobile - always */
    .link-text {
      display: none !important;
    }

    .link-text::after {
      display: none !important;
    }

    /* Hide icons on mobile by default (dark mode) */
    .social-icon {
      display: none !important;
    }

    /* Dark mode (default): show unix-style tags with brackets */
    .link-tag {
      display: inline-flex;
