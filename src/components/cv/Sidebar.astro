---
import Odometer from '../ui/Odometer.astro';
import TechStackPrint from './TechStackPrint.astro';
import type { TechTag } from '../../lib/cv-data';

interface Achievement {
  metric: string;
  headline: string;
  description: string;
}

interface Education {
  degree: string;
  degree_title: string;
  score_short: string;
  specialism: string;
  institution: string;
  year: number;
}

interface Props {
  name: string;
  role: string;
  email: string;
  phone?: string;
  location: string;
  linkedin: string;
  github: string;
  profile: string;
  achievements: Achievement[];
  education: Education;
  technologies: TechTag[];
}

const { name, role, email, phone, location, linkedin, github, profile, achievements, education, technologies } = Astro.props;

const toSnakeCase = (str: string) =>
  str.toUpperCase().replace(/\s+/g, '_');
---

<aside class="sidebar-column scrollbar-hidden">
  <header class="site-header mb-fluid-sm md:mb-fluid-lg">
    <!-- Desktop: stacked layout -->
    <div class="header-desktop">
      <h1 class="text-3xl font-medium text-foreground leading-none tracking-tight">{name}</h1>
      <p class="sidebar-role text-fluid-sm font-light tracking-wide mt-2">{role}</p>
      <p class="sidebar-location text-fluid-2xs font-mono text-muted-foreground mt-1">{location}</p>
    </div>

    <!-- Mobile: compact space-between layout -->
    <div class="header-mobile">
      <h1 class="text-xl font-medium text-foreground leading-none tracking-tight">{name}</h1>
      <p class="header-meta font-mono text-fluid-xs">
        <span class="light:hidden"><span class="meta-separator">//</span> {role.toUpperCase().replace(/\s+/g, '_')}, {(location.split(',')[0] ?? location).toUpperCase()}</span>
        <span class="hidden light:inline">{role}, {location.split(',')[0] ?? location}</span>
      </p>
    </div>
  </header>

  <nav class="social-nav mb-fluid-sm md:mb-fluid-lg" aria-label="Contact links">
    <address class="social-links font-mono text-fluid-2xs not-italic">
      <!-- Desktop: full links with text | Mobile dark: tags | Mobile light: icons only -->
      <a
        href={`mailto:${email}`}
        class="social-link screen-only"
        aria-label={`Send email to ${email}`}
      >
        <svg class="social-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        <span class="link-text">{email}</span>
        <span class="link-tag">@</span>
      </a>

      <a
        href={linkedin}
        target="_blank"
        rel="noopener noreferrer"
        class="social-link screen-only"
        aria-label="View LinkedIn profile (opens in new tab)"
      >
        <svg class="social-icon" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
        </svg>
        <span class="link-text">LinkedIn</span>
        <span class="link-tag">/in</span>
      </a>

      <div class="print-only print-contact-links">
        {phone && (
          <div class="print-contact-item">
            <span class="print-contact-label">Phone</span>
            <span class="print-contact-value">{phone}</span>
          </div>
        )}
        <div class="print-contact-item">
          <span class="print-contact-label">Email</span>
          <span class="print-contact-value">{email}</span>
        </div>
        <div class="print-contact-item">
          <span class="print-contact-label">LinkedIn</span>
          <span class="print-contact-value">{linkedin.replace('https://www.', '').replace('https://', '')}</span>
        </div>
        <div class="print-contact-item">
          <span class="print-contact-label">GitHub</span>
          <span class="print-contact-value">{github.replace('https://', '')}</span>
        </div>
      </div>

      <a
        href={github}
        target="_blank"
        rel="noopener noreferrer"
        class="social-link"
        data-print="hide"
        aria-label="View GitHub profile (opens in new tab)"
      >
        <svg class="social-icon" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
        </svg>
        <span class="link-text">GitHub</span>
        <span class="link-tag">/src/gh</span>
      </a>

      <button
        type="button"
        class="social-link"
        onclick="window.print()"
        data-print="hide"
        aria-label="Print this page"
      >
        <svg class="social-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
        </svg>
        <span class="link-text">Print</span>
        <span class="link-tag">{'>'} save.pdf</span>
      </button>

      <button
        id="theme-toggle"
        type="button"
        class="social-link"
        data-print="hide"
        aria-label="Light Mode: Switch to light theme"
      >
        <svg class="social-icon sun-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
        <svg class="social-icon moon-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
        </svg>
        <span class="link-text theme-label">Light Mode</span>
        <!-- In dark mode: show /light (what clicking will do). In light mode: show /dark -->
        <span class="link-tag theme-tag-light">~/light</span>
        <span class="link-tag theme-tag-dark hidden">~/dark</span>
      </button>
    </address>
  </nav>

  <section class="profile-section mb-fluid-sm md:mb-fluid-lg" aria-label="Profile">
    <h2 class="sidebar-section-title">Profile</h2>
    <h2 class="terminal-section-title md:hidden light:hidden">&gt; PROFILE</h2>
    <h2 class="mobile-section-title">Profile</h2>
    <p class="profile-text text-fluid-2xs text-muted-foreground leading-relaxed mt-fluid-xs">
      {profile}
    </p>
  </section>

  <section class="achievements-section mb-fluid-sm md:mb-fluid-lg" aria-label="Key Achievements">
    <h2 class="sidebar-section-title achievements-title">Achievements</h2>
    <h2 class="terminal-section-title md:hidden light:hidden">&gt; ACHIEVEMENTS</h2>
    <h2 class="mobile-section-title">Achievements</h2>

    <!-- Two-column grid with aligned metrics -->
    <div class="achievements-grid grid">
      {achievements.map((achievement) => (
        <div class="achievement-item">
          <data
            value={achievement.headline}
            class="achievement-metric font-mono text-fluid-base font-semibold tracking-tight leading-none"
          >
            <Odometer value={achievement.headline} />
          </data>
          <span class="achievement-label font-mono text-[9px] uppercase tracking-[0.12em]">
            <span class="screen-only">{toSnakeCase(achievement.metric)}</span>
            <span class="print-only">{achievement.metric}</span>
          </span>
          <span class="grid-spacer" aria-hidden="true"></span>
          <p class="achievement-desc text-fluid-2xs text-muted-foreground leading-snug">
            {achievement.description}
          </p>
        </div>
      ))}
    </div>
  </section>

  <section class="education-section mb-fluid-sm md:mb-fluid-lg" aria-label="Education">
    <h2 class="sidebar-section-title">Education</h2>
    <div class="spec-block mt-fluid-xs">
      <p class="font-sans text-fluid-xs text-muted-foreground">
        {education.degree_title} {education.degree}
      </p>
      <p class="edu-meta font-mono text-[10px] uppercase tracking-wider text-muted-foreground mt-1">
        <span class="screen-only">{education.institution} <span class="spec-separator" aria-hidden="true">//</span> {education.year}</span>
        <span class="print-only">{education.institution} · {education.year}</span>
      </p>
      <p class="edu-meta font-mono text-[10px] uppercase tracking-wider text-muted-foreground mt-0.5">
        <span class="screen-only">{education.specialism} <span class="spec-separator" aria-hidden="true">//</span> {education.score_short}</span>
        <span class="print-only">{education.specialism} · {education.score_short}</span>
      </p>
    </div>
  </section>

  <TechStackPrint technologies={technologies} />

  <section class="print-qr-section print-only" aria-label="View CV online">
    <div class="qr-content">
      <p class="qr-label">View on web</p>
      <div class="qr-code" aria-hidden="true">
        <!-- QR code for https://cs-cv.vercel.app/ -->
        <svg viewBox="0 0 29 29" xmlns="http://www.w3.org/2000/svg">
          <rect width="29" height="29" fill="#fff"/>
