---
interface LeadershipItem {
  icon: 'users' | 'book' | 'code' | 'star';
  title: string;
  description: string;
}

interface Props {
  items: LeadershipItem[];
  sectionNumber?: string;
}

const { items, sectionNumber = '04' } = Astro.props;

const icons = {
  users: 'M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z',
  book: 'M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253',
  code: 'M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4',
  star: 'M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z',
};

// Convert titles to SNAKE_CASE
const toSnakeCase = (str: string) =>
  str.toUpperCase().replace(/\s+/g, '_');
---

<section aria-labelledby="leadership-heading" class="mt-fluid-lg mb-fluid-md" data-print="hide">
  <!-- Section header - // PREFIX NUMBERED format -->
  <h2
    id="leadership-heading"
    class="mb-fluid-sm flex items-baseline gap-2 text-foreground border-b border-border pb-fluid-xs"
  >
    <span class="section-prefix font-mono text-fluid-xs tracking-wider" aria-hidden="true">
      // {sectionNumber}
    </span>
    <span class="font-mono text-fluid-sm tracking-wide">CULTURAL_LEADERSHIP</span>
  </h2>

  <!-- Grid of leadership items -->
  <ul class="grid gap-6 sm:grid-cols-2">
    {items.map((item) => (
      <li class="group">
        <div class="flex items-start gap-3">
          <!-- Icon - purple accent -->
          <svg
            class="leadership-icon mt-1 h-4 w-4 shrink-0"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={icons[item.icon]} />
          </svg>

          <div>
            <!-- Micro-label title -->
            <h3 class="font-mono text-fluid-2xs text-foreground uppercase tracking-wider">{toSnakeCase(item.title)}</h3>
            <p class="mt-1 text-fluid-xs leading-relaxed text-muted-foreground">{item.description}</p>
          </div>
        </div>
      </li>
    ))}
  </ul>
</section>

<style>
  /* Section prefix - comment green */
  .section-prefix {
    color: var(--color-accent-green);
  }

  /* Icons - purple accent */
  .leadership-icon {
    color: var(--color-accent-purple-muted);
  }
</style>
