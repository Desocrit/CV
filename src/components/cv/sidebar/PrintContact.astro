---
/**
 * SidebarPrintContact - Contact details formatted for print
 *
 * Displays phone, email, LinkedIn, and GitHub in a clean, professional format
 * optimized for printed output. Hidden on screen.
 */
import PrintOnly from '../../layout/PrintOnly.astro';
import Stack from '../../layout/Stack.astro';
import Label from '../../typography/Label.astro';
import Text from '../../typography/Text.astro';

interface Props {
  phone?: string;
  email: string;
  linkedin: string;
  github: string;
}

const { phone, email, linkedin, github } = Astro.props;
---

<PrintOnly class="print:!flex print:mt-1.5">
  <Stack gap="xs" class="print:gap-1">
    {phone && (
      <Stack gap="none">
        <Label variant="contact">Phone</Label>
        <Text as="span" mono>{phone}</Text>
      </Stack>
    )}
    <Stack gap="none">
      <Label variant="contact">Email</Label>
      <Text as="span" mono>{email}</Text>
    </Stack>
    <Stack gap="none">
      <Label variant="contact">LinkedIn</Label>
      <Text as="span" mono>{linkedin.replace('https://www.', '').replace('https://', '')}</Text>
    </Stack>
    <Stack gap="none">
      <Label variant="contact">GitHub</Label>
      <Text as="span" mono>{github.replace('https://', '')}</Text>
    </Stack>
  </Stack>
</PrintOnly>
