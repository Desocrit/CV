---
/**
 * Sidebar Layout - Responsive wrapper for sidebar content
 *
 * Provides the structural layout with responsive grid positioning.
 * Uses Stack for consistent vertical spacing, with grid layout at sm breakpoint.
 *
 * Slots:
 * - header: Name, role, and location
 * - nav: Contact links and actions
 * - default: Main content sections
 * - footer: Bottom content (QR code, etc.)
 */
import Stack from '../../layout/Stack.astro';

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<aside class:list={[
  'static max-h-none overflow-y-visible scrollbar-hidden',
  'p-[var(--spacing-fluid-md)] pb-0',
  'sm:grid sm:grid-cols-2 sm:grid-rows-[auto_auto_auto] sm:gap-x-[var(--spacing-fluid-md)] sm:gap-y-[var(--spacing-fluid-sm)]',
  'lg:block lg:sticky lg:top-0 lg:self-start lg:max-h-screen lg:overflow-y-auto lg:p-[var(--spacing-fluid-lg)] lg:pb-0',
  'print:h-auto print:overflow-visible print:p-0 print:pr-12',
  className,
]}>
  <Stack gap={{ base: 'sm', lg: 'lg' }} class="sm:contents lg:flex print:gap-0">
    <slot name="header" />
    <slot name="nav" />
    <slot />
    <slot name="footer" />
  </Stack>
</aside>
