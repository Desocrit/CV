---
interface Props {
  company: string;
  role: string;
  startDate: string;
  endDate?: string;
  location: string;
}

const { company, role, startDate, endDate, location } = Astro.props;
---

<article class="relative border-l-2 border-border pl-fluid-sm">
  <div
    class="absolute top-1 -left-[0.4375rem] h-3 w-3 rounded-full border-2 border-border bg-background"
    aria-hidden="true"
  >
  </div>
  <div class="flex flex-col gap-1 sm:flex-row sm:items-baseline sm:justify-between">
    <div>
      <h3 class="text-foreground">{role}</h3>
      <p class="text-fluid-base text-muted-foreground">{company}</p>
    </div>
    <div class="flex flex-col text-fluid-sm text-muted-foreground sm:items-end sm:text-right">
      <time>{startDate} â€“ {endDate ?? 'Present'}</time>
      <span>{location}</span>
    </div>
  </div>
  <div
    class="prose prose-sm prose-li:my-0 mt-fluid-xs max-w-none text-muted-foreground"
  >
    <slot />
  </div>
</article>
