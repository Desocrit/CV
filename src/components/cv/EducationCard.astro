---
interface Props {
  institution: string;
  degree: string;
  year: number;
  notable?: string;
}

const { institution, degree, year, notable } = Astro.props;
---

<article class="flex flex-wrap items-baseline gap-x-2 gap-y-1 text-fluid-sm">
  <h3 class="font-medium text-foreground">{degree}</h3>
  <span class="text-muted-foreground">·</span>
  <p class="text-muted-foreground">{institution}</p>
  <span class="text-muted-foreground">·</span>
  <time class="font-mono text-fluid-xs text-muted-foreground">{year}</time>
  {notable && (
    <span class="notable-text w-full font-mono text-fluid-xs">{notable}</span>
  )}
</article>

<style>
  /* Notable text - comment green */
  .notable-text {
    color: var(--accent-green);
  }

  @media print {
    .notable-text {
      color: #333 !important;
    }
  }
</style>
