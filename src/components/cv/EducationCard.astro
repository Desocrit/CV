---
interface Props {
  institution: string;
  degree: string;
  field: string;
  startDate: string;
  endDate?: string;
  location: string;
}

const { institution, degree, field, startDate, endDate, location } = Astro.props;
---

<article class="relative border-l-2 border-gray-300 pl-[var(--space-fluid-sm)]">
  <div
    class="absolute top-1 -left-[0.4375rem] h-3 w-3 rounded-full border-2 border-gray-400 bg-white"
    aria-hidden="true"
  >
  </div>
  <div class="flex flex-col gap-1 sm:flex-row sm:items-baseline sm:justify-between">
    <div>
      <h3 class="text-gray-900">{degree} in {field}</h3>
      <p class="text-[var(--text-fluid-base)] text-gray-700">{institution}</p>
    </div>
    <div class="flex flex-col text-[var(--text-fluid-sm)] text-gray-700 sm:items-end sm:text-right">
      <time>{startDate} â€“ {endDate ?? 'Present'}</time>
      <span>{location}</span>
    </div>
  </div>
  <div
    class="prose prose-sm prose-gray prose-li:my-0 mt-[var(--space-fluid-xs)] max-w-none text-gray-700"
  >
    <slot />
  </div>
</article>
